set COMPILER as "gcc"

\\set arguments as string (
\\    "example.cpp",
\\    "main.cpp"
\\)

\\ set flags as string (
\\    f("curl")
\\)

for signal "start" [
    println "Hello,
    Elitebuild!"

    for argument "hi" [
        println "Hi!"
    ]

    for argument "all" [
        println "There's nothing to do."
    ]

    // Platform-specific functions.
    for specific "linux"   [
        println "Linux-based"
    ]

    for specific "freebsd" [
        println "FreeBSD"
    ]

    \\for argument("make") [
    \\    for specific("linux") [
    \\        use commandline(
    \\            $COMPILER,
    \\            $arguments,
    \\            $flags
    \\        )
    \\        print "hello, world"
    \\
    \\        use commandline(
    \\            "echo",
    \\            "hello, world"
    \\        )
    \\    ]
    \\]

    for specific "linux" [
        use exec   "echo 'Hello, Elitebuild from syscall! (linux-based)'"
        use signal "exit"
    ]

    for specific "freebsd" [ use exec  "uname --a" ]
]